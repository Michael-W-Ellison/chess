# Backend Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=True

# Database
DATABASE_URL=sqlite:///./data/chatbot.db

# LLM Configuration
MODEL_PATH=./models/llama-3.2-3b-instruct.gguf
MODEL_CONTEXT_LENGTH=2048
MODEL_MAX_TOKENS=512
MODEL_TEMPERATURE=0.7
MODEL_N_GPU_LAYERS=0  # Set to -1 for full GPU, 0 for CPU only

# Safety
ENABLE_SAFETY_FILTER=True
LOG_SAFETY_EVENTS=True

# Parent Notifications (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/chatbot.log

# Features
ENABLE_VECTOR_MEMORY=False  # ChromaDB for semantic search
ENABLE_WEEKLY_REPORTS=True

# Security
PARENT_DASHBOARD_REQUIRE_PASSWORD=True
